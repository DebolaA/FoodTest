@model QAFoods.foodlist
@{
    ViewBag.Title = "FoodList";
}
<!-- CSS -->
<link href="~/lib/dataTables.bootstrap.min.css" rel="stylesheet" />
@if (Model != null)
{
<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Food - List</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    FOOD LIST
                </div>
                <hr />
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <p>
                                @Html.ActionLink("Add New Food", "CreateFood", "Food")
                            </p>
                            <table id="myDataTable" class="table table-bordered table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Food ID</th>
                                        <th>Food Name</th>
                                        <th>Food Description</th>
                                        <th></th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var food in Model.AllFood)
                                    {
                                    <tr>
                                        <td>@food.FoodId</td>
                                        <td>@food.FoodName</td>
                                        <td>@food.FoodDesc</td>
                                        <td>
                                            <a asp-controller="Review"
                                               asp-action="FoodReview"
                                               asp-route-id="@food.FoodId">View</a>
                                        </td>
                                        <td>
                                            <a asp-controller="Food"
                                               asp-action="Edit"
                                               asp-route-id="@food.FoodId">Edit</a>
                                        </td>
                                        <td>
                                            @Html.ActionLink("Delete", "Delete",
                                            new { id = food.FoodId },
                                            new { onclick = "return confirm('Do you want to delete this item " + @food.FoodName + "?')" })                                            
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
</div>
}
<!-- /#page-wrapper -->


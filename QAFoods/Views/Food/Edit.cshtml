@model QAFoods.Food

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Edit</h2>

@using (Html.BeginForm("SaveChanges", "Food", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Edit Food</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.FoodId)

        <div class="form-group">
            <label for="FoodName" class="control-label col-md-2">Food Name</label>
            <div class="col-md-10">
                <input type="text" id="FoodName" name="FoodName" class="form-control" value=@Model.FoodName required maxlength="50" width="50" />
                <span class="text-danger">*</span>
            </div>
        </div>

        <div class="form-group">
            <label for="FoodDesc" class="control-label col-md-2">Food Description</label>
            <div class="col-md-10">
                <input type="text" id="FoodDesc" name="FoodDesc" value=@Model.FoodDesc class="form-control" maxlength="500" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

